<form id="search-form" class="hidden items-center md:flex lg:w-52" action="/articles/search">
  <label for="search-input" class="sr-only">Search</label>
  <div class="relative w-full">
    <input
      type="search"
      id="query"
      name="query"
      class=" bg-gray-50 border-2 border-siteYellow focus:border-siteYellow focus:ring-siteYellow text-gray-900 text-sm tracking-wider rounded block w-full p-2.5 pr-10"
      placeholder="Search..."
      required
    />
    <button
      type="submit"
      class="absolute inset-y-0 right-0 flex items-center px-3 text-white bg-siteYellow rounded-r focus:ring-4 focus:outline-none focus:ring-siteYellow"
    >
      <svg
        class="w-4 h-4 text-gray-900"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 20 20"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
        />
      </svg>
      <span class="sr-only">Search</span>
    </button>
  </div>
</form>
